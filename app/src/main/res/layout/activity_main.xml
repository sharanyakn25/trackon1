<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Folks!!!"
        android:textColor="#FFB23E"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFB23E"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to TrackOn"
        android:textColor="#FFB23E"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFB23E"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="88dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/home"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="88dp"
        android:text="Please select your bus number"
        android:textColor="#FFB23E"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#837156"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="331dp" />

    <Spinner
        android:id="@+id/spinner_select"
        android:layout_width="342dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView2"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="439dp" />


</androidx.constraintlayout.widget.ConstraintLayout>